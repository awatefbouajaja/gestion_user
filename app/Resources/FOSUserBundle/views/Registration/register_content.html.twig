<form {#class="register-form"#} action="{{ path('fos_user_registration_register') }}" {#{{ form_enctype(form) }}#} method="POST">
    <h3>Sign Up</h3>
    <p> Enter your personal details below: </p>
    <div class="form-group" id="fos_user_registration_form">
        {{ form_widget(form.email, { 'attr': {'class': 'form-control placeholder-no-fix', 'placeholder': 'form.email'|trans } }) }}
        {{ form_errors(form.email) }}
        <br>
        {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'form.username'|trans } }) }}
        {{ form_errors(form.username) }}
        <br>
        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'form.password'|trans } }) }}
        {{ form_errors(form.plainPassword.first) }}
        <br>
        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'form.password_confirmation'|trans } }) }}
        {{ form_errors(form.plainPassword.second) }}
        <br>
        {{ form_rest(form) }}

    </div>
    <div>
        <a href="{{ path('fos_user_security_login') }}" type="button" class="btn red btn-outline"> Back </a>
        <input class="btn green pull-right" type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
</form>
