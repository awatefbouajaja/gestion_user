{% trans_default_domain 'FOSUserBundle' %}

<form {#class="forget-form" #}action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
    <h3>Forget Password ?</h3>
    <p> Enter your e-mail address below to reset your password. </p>
    <div class="form-group">
        <label for="username">{{ 'resetting.request.username'|trans }}</label>
        <input class="form-control placeholder-no-fix" placeholder="Email" type="text" id="username" name="username" required="required" />
    </div>
    <div class="form-actions">
        <a href="{{ path('fos_user_security_login') }}" type="button" id="back-btn" class="btn red btn-outline">Back </a>
        <input type="submit" value="{{ 'resetting.request.submit'|trans }}" class="btn green pull-right" />
    </div>
</form>
